<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/Black_Secondary2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesRed"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/red" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesBlue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/blue" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesYellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/yellow" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesGreen"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/green" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesPink"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/pink" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesPurple"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/purple" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesOrange"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/Orange" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesTeal"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/teal" />

                <RelativeLayout
                    android:id="@+id/BottomSheetDialogAddNotesBlack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/Black_Primary" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>